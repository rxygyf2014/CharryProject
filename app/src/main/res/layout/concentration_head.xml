<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/concentration_re"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <android.support.v4.view.ViewPager
            android:id="@+id/concentration_viewpager"
            android:layout_width="match_parent"
            android:layout_height="180dp">

        </android.support.v4.view.ViewPager>

        <ImageButton
            android:id="@+id/concentration_ib_left"
            android:layout_width="50dp"
            android:layout_height="180dp"
            android:layout_alignParentLeft="true"
            android:background="#0fff"
            android:src="@mipmap/ic_image_right" />

        <ImageButton
            android:id="@+id/concentration_ib_right"
            android:layout_width="50dp"
            android:layout_height="180dp"
            android:layout_alignParentRight="true"
            android:background="#0fff"
            android:src="@mipmap/ic_image_left" />

        <LinearLayout
            android:id="@+id/concentration_ll_point"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="150dp"
            android:gravity="center"
            android:orientation="horizontal">

        </LinearLayout>

        <LinearLayout
            android:id="@+id/concentration_ll_column"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_below="@+id/concentration_viewpager"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/concentration_iv_music_column"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@mipmap/discover_musiccolumn" />

            <ImageView
                android:id="@+id/concentration_iv_music_genre"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="2dp"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@mipmap/discover_musicgenre" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/concentration_ll_jingxuan"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/concentration_ll_column"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="编辑精选"
                android:textColor="#ED8298"
                android:textSize="15sp" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>