<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    tools:context="com.charryteam.charryproject.fragment.discover.DiscoverDetailsFragment">

    <LinearLayout
        android:id="@+id/radio_ll"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/radio_back"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:src="@mipmap/ic_back" />

        <TextView
            android:id="@+id/radio_tv_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="title"
            android:textColor="#fff" />

        <ImageView
            android:id="@+id/radio_iv_menu"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:src="@mipmap/ic_history" />

    </LinearLayout>

    <ImageView
        android:id="@+id/radio_iv_bg"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/radio_ll"
        android:scaleType="centerCrop"
        android:src="@mipmap/bg_selection" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="80dp">

        <ImageView
            android:id="@+id/radio_iv_start"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:padding="10dp"
            android:src="@mipmap/ic_stop" />

        <TextView
            android:id="@+id/radio_tv_login_tanmu"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/tv_bg_shape"
            android:gravity="center"
            android:padding="10dp"
            android:text="登陆发送弹幕"
            android:textColor="#fff"
            android:textSize="15sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true">

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="3dp"
            android:background="#8c8a8c" />

        <TextView
            android:layout_width="50dp"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="弹幕"
            android:textColor="#fff"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="45dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            android:padding="12dp"
            android:src="@mipmap/ic_barrage_open" />
    </RelativeLayout>
</RelativeLayout>
