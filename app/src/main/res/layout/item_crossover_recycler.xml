<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
	<ImageView
		android:id="@+id/item_iv_head_crossover"
		android:layout_width="match_parent"
		android:layout_height="180dp"
		android:scaleType="fitXY"
		android:src="@mipmap/bg_column"/>
	<TextView
		android:id="@+id/item_tv_title_crossover"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerHorizontal="true"
		android:layout_gravity="center"
		android:layout_marginTop="90dp"
		android:text="樱桃音乐"
	    android:textColor="#FCFDFD"
		/>
	<Button
		android:id="@+id/item_delete_button"
		android:layout_width="60dp"
		android:layout_height="35dp"
	    android:layout_alignParentRight="true"
	    android:background="@drawable/shape_delete_background"
	    android:text="删除"
	    android:textSize="15sp"
	    android:textColor="#fff"
	    android:layout_marginTop="15dp"
		android:layout_marginRight="15dp"
	    android:visibility="gone"
		/>
	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@id/item_tv_title_crossover"
		android:layout_centerHorizontal="true"
		android:layout_marginTop="30dp"
		android:gravity="center"
		android:orientation="horizontal">
		<ImageView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerHorizontal="true"
			android:src="@mipmap/ic_read"
			/>
		<TextView
			android:id="@+id/item_tv_readNum_crossover"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:text="300"
			android:textColor="#FCFDFD"/>
	</LinearLayout>
	<LinearLayout
		android:id="@+id/linear_container_crossover"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/item_iv_head_crossover"
		android:layout_marginLeft="10dp"
		android:layout_marginTop="10dp"
		android:layout_marginRight="10dp"
		android:orientation="horizontal">
		<ImageView
			android:id="@+id/item_user_head_crossover"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@mipmap/bg_pet_head"
		    android:src="@mipmap/ic_default_head_small"
		    android:scaleType="center"
			/>
		<LinearLayout
			android:layout_width="0dp"
			android:layout_weight="1"
			android:layout_height="wrap_content"
			android:layout_marginLeft="10dp"
			android:orientation="vertical">
			<TextView
				android:id="@+id/item_usrer_nick_crossover"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="15sp"
				android:text="人的昵称"/>
			<TextView
				android:id="@+id/item_creat_time_crossover"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="10dp"
				android:text="时间"
				android:textSize="12sp"
				android:textColor="#BABABA"/>
		</LinearLayout>
	</LinearLayout>
	<ImageView
		android:id="@+id/item_iv_zan_crossover"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="20dp"
		android:layout_alignParentRight="true"
		android:layout_below="@id/item_iv_head_crossover"
		android:layout_marginRight="10dp"
		android:clickable="true"
		android:src="@drawable/crossover_good_selector"
		android:visibility="gone"
		/>
	<ImageView
		android:id="@+id/item_iv_share_crossover"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="20dp"
		android:layout_alignParentRight="true"
		android:src="@mipmap/ic_share"
		android:layout_below="@id/item_iv_head_crossover"
		android:layout_marginRight="10dp"
		android:visibility="gone"
		/>
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/linear_container_crossover"
		android:layout_marginLeft="10dp"
		android:layout_marginRight="10dp"
		android:layout_marginTop="10dp"
		android:layout_marginBottom="10dp"
		android:orientation="horizontal">
		<TextView
			android:id="@+id/item_zan_names_crossover"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="5dp"
			android:text="0 人点赞"
			android:textColor="#BABABA"
			android:textSize="12sp"
			android:lines="2"
			android:ellipsize="end"/>
	</LinearLayout>

</RelativeLayout>