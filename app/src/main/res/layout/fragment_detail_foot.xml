<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00ffffff"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    tools:context=".fragment.crossover.DetailHeadFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6">

            <TextView
                android:id="@+id/detail_by"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="by"
                android:textColor="#ff005C" />

            <TextView
                android:id="@+id/detail_nick"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/detail_by"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="上传人"
                android:textColor="#ff005c" />

            <TextView
                android:id="@+id/detail_lastTitle"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_above="@id/detail_by"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="80dp"
                android:gravity="center"
                android:text="标题"
                android:textColor="#FF005C" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:background="#fff">

            <TextView
                android:id="@+id/detail_titleCrossover"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="标题"
                android:textColor="#ff005c"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/detail_titleNotic"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="7dp"
                android:gravity="center"
                android:text="我们一起越过这个世界的冷漠"
                android:textColor="#ff005c" />
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>
