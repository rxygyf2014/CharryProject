<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="192dp"
    android:background="@mipmap/bg_playing"
    android:orientation="vertical"
    android:padding="16dp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <LinearLayout
        android:id="@+id/nav_relativelayout"
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="50dp"
        android:orientation="vertical">

        <com.charryteam.charryproject.widget.RoundImageView
            android:id="@+id/nav_header_img"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_centerVertical="true"
            android:layout_weight="8"
            android:scaleType="centerCrop"
            android:src="@mipmap/bg_pet_head" />

        <TextView
            android:id="@+id/nav_header_tv_name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:gravity="center"
            android:text="未登录"
            android:textColor="#fff"
            android:textSize="15sp" />


    </LinearLayout>


    <ImageView
        android:id="@+id/qrcode_iv_img"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:layout_centerVertical="true"
        android:background="#fff"
        android:scaleType="centerCrop" />

</RelativeLayout>