<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	tools:context="com.charryteam.charryproject.fragment.crossover.CrossoverCreateFragment">
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="50dp"
		android:background="#FF005C"
		android:orientation="horizontal">
		<ImageView
			android:id="@+id/iv_createback_crosscreate"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:src="@mipmap/ic_back"
		    android:layout_gravity="center"
		    android:layout_marginLeft="10dp"
			/>
		<TextView
			android:layout_width="0dp"
			android:layout_weight="1"
			android:layout_height="wrap_content"
			android:text="编辑"
			android:textColor="#fff"
			android:textSize="15dp"
			android:layout_gravity="center"
			android:gravity="center"/>
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="保存"
			android:textSize="15sp"
			android:textColor="#fff"
			android:layout_marginRight="20dp"
		    android:layout_gravity="center"
			/>
	</LinearLayout>
	<ListView
		android:id="@+id/lv_createContent_crossover"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1">

	</ListView>
	<LinearLayout
		android:id="@+id/linear_addMusic_crossover"
		android:layout_width="match_parent"
		android:layout_height="50dp"
	    android:orientation="horizontal"
		>
		<TextView
			android:layout_width="0dp"
			android:layout_weight="1"
			android:layout_height="wrap_content"
			android:text="添加音乐"
			android:textSize="15sp"
			android:layout_gravity="center"
			android:layout_marginLeft="10dp"/>
		<ImageView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:src="@mipmap/theme_pink_ic_goto"
		    android:layout_gravity="center"
		    android:layout_marginRight="10dp"
			/>
	</LinearLayout>
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:layout_marginRight="10dp"
		android:layout_marginLeft="10dp"
		>
		<Button
			android:id="@+id/release_crossover"
			android:layout_width="match_parent"
			android:layout_height="50dp"
			android:background="#FF005C"
			android:text="发布"
			android:textColor="#fff"
			android:textSize="15sp"
			/>
		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="7dp"
			android:text="1.只有合法的内容才能被发现、点赞、喜欢和分享，请保证内容的品质和合法性(图片及文字内容违反法律法规将被永久封号);"
			/>
		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="2.发布的内容需包含：封面，标题，图1,2,3。"
		    android:layout_marginBottom="7dp"
			/>
	</LinearLayout>


</LinearLayout>
