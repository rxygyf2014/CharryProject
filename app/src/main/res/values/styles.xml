<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here.-->
        <!-- toolbaractionbar颜色 -->
        <item name="colorPrimary">#FF005C</item>
        <!-- 状态栏颜色 -->
        <item name="colorPrimaryDark">#FF005C</item>
        <!-- 窗口的背景颜色 -->
        <item name="android:windowBackground">@android:color/white</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--进入和推出的动画效果-->
    <style name="AnimationActivity" parent="@android:style/Animation.Activity" mce_bogus="1">
        <item name="android:activityOpenEnterAnimation">@anim/push_top_in</item>
        <item name="android:activityOpenExitAnimation">@anim/push_top_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:activityCloseExitAnimation">@anim/push_bottom_out</item>
    </style>

    <!--custom theme -->
    <style name="AppTheme1" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!--custom theme -->
    <style name="AppTheme2" parent="AppTheme">
        <!--添加进入和推出的动画效果-->
        <item name="android:windowAnimationStyle">@style/AnimationActivity</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!--设置ToolBar的title的text的颜色样式-->
    <style name="TransparentText">
        <item name="android:textColor">#00000000</item>
    </style>

</resources>
